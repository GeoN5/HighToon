<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:textColor="#3c581d"
        android:text="파격세일 이벤트!"
        android:layout_marginTop="10dp"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/image1"
                android:layout_width="150dp"
                android:layout_height="230dp"
                android:background="@drawable/b"
                />

            <TextView
                android:id="@+id/title1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#3c581d"
                android:text="노란 단색 티"
                android:layout_below="@+id/image1"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="60dp"/>

            <TextView
                android:id="@+id/kill1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#3c581d"
                android:text="가격 : 40,000"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/title1"
                android:layout_marginLeft="70dp"/>

            <TextView
                android:id="@+id/discount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격 : 28,000"
                android:textSize="21sp"
                android:layout_marginTop="10dp"
                android:textColor="#3c581d"
                android:layout_below="@+id/kill1"
                android:layout_marginLeft="40dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/image2"
                android:layout_width="150dp"
                android:layout_height="230dp"
                android:background="@drawable/h"/>

            <TextView
                android:id="@+id/title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="#3c581d"
                android:text="블라우스 청바지 세트"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/kill2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="#3c581d"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="40dp"
                android:text="가격 : 52,000"/>

            <TextView
                android:id="@+id/discount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가격 : 39,000"
                android:textSize="21sp"
                android:layout_marginTop="10dp"
                android:textColor="#3c581d"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>